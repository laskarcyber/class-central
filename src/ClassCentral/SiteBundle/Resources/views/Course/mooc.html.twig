                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ course['pageUrl']|url_encode }}" class="facebook" target="_blank" onclick=" _gaq.push(['_trackEvent', 'Course - Share', 'Facebook', '{{ course['name'] }}']);"></a>
